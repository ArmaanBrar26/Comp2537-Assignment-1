<%- include("templates/header") %>

<h1 class="text-2xl font-bold text-center mt-4">Welcome, <%= user.name %>!</h1>

<!-- Responsive grid for images -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mt-6 px-4">
    <% const images = ['champ.jpg', 'jayson-tatum-and-jaylen-brown.jpg', 'Jayson.jpg.webp']; %>
    <% images.forEach(image => { %>
        <div class="flex justify-center">
            <img src="/<%= image %>" alt="Image" class="rounded-lg shadow-lg max-w-full h-auto">
        </div>
    <% }); %>
</div>

<%- include("templates/footer") %>